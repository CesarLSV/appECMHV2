                    </Label>-->
                    
                </StackLayout>
                <StackLayout
                       Padding="5">

                    <ListView 
                        HasUnevenRows ="True"
                        ItemsSource="{Binding LoggedUser}"
                        SeparatorVisibility="None"
                        VerticalOptions="CenterAndExpand"
                        WidthRequest="100"
                        HeightRequest="200">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>




                                    <StackLayout 
                                        BackgroundColor="White"
                                        Orientation="Vertical"
                                        VerticalOptions="CenterAndExpand">

                                        <StackLayout 
                                           
                                                BackgroundColor="Red"
                                                Orientation="Horizontal">

                                            <Image
                                                BackgroundColor="#c0201f"
                                                Source="person.png"
                                                WidthRequest="50">

                                            </Image>

                                            <Label
                                                FontSize="Medium"
                                                Text="Perfil del alumno"
                                                FontAttributes="Bold"
                                                TextColor="#e2f1fb"
                                                BackgroundColor="Red"
                                                VerticalOptions="CenterAndExpand">

                                            </Label>
                                        </StackLayout>
                                        
                                        <StackLayout 
                                            Padding="5"
                                            Orientation="Vertical">
                                            <Label
                                          
                                            FontSize="Medium"
                                            FontAttributes="Bold"
                                            Text="{Binding NameStudent}"
                                            TextColor="Black"
                                            VerticalOptions="CenterAndExpand">

                                            </Label>

                                        <Label
                                           
                                            FontSize="Small"
                                            Text="{Binding Curriculum}"
                                            TextColor="Black"
                                             VerticalOptions="CenterAndExpand">

                                        </Label>
                                        </StackLayout>
                                    </StackLayout>







                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <ActivityIndicator
                    Color="#9ebad2"
                    IsRunning="{Binding IsRunning, Mode=TwoWay}"
                    VerticalOptions="CenterAndExpand">

                    </ActivityIndicator>

