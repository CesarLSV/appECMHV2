<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:i18n="clr-namespace:appECMHV2.Helpers"
             x:Class="appECMHV2.Views.LoginPage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             BackgroundColor="White"
             Title="Inicio">
    <ContentPage.Content>
        <ScrollView
            BindingContext="{Binding Login}">
            <StackLayout
            Padding="10,10,10,5"
                BackgroundColor="#4f6e88">
                <!--<Label
                FontAttributes="Bold"
                FontSize="Large"
                HorizontalOptions="Center"
                Text="Ingreso de alumnos">
                
                </Label>-->
                <Image
                Source="top_2.png"
                WidthRequest="200">

                </Image>

                <Grid
                Margin="0,10"
                VerticalOptions="CenterAndExpand">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>

                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        TextColor="#e2f1fb"
                        Text="{i18n:Translate userlogin}"
                        VerticalOptions="Center">
                    </Label>

                    <Entry
                        Grid.Row="0"
                        Grid.Column="1"
                        Keyboard="Email"
                        Placeholder="{i18n:Translate useryouplaceholder}"
                        Text="{Binding Usuario, Mode=TwoWay}"
                        TextColor="DarkGray">
                    </Entry>

                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        TextColor="#e2f1fb"
                        Text="{i18n:Translate password}"
                        VerticalOptions="Center">
                    </Label>

                    <Entry
                        Grid.Row="1"
                        Grid.Column="1"
                        IsPassword="True"
                        Placeholder="{i18n:Translate passwordplaceholder}"
                        Text="{Binding Clave, Mode=TwoWay}"
                        TextColor="DarkGray"
                        IsEnabled="{Binding IsEnabled, Mode=TwoWay}">
                    </Entry>

                </Grid>



                <StackLayout
                    Margin="20,0"
                    Orientation="Horizontal"
                    VerticalOptions="CenterAndExpand">

                    <Label
                        HorizontalOptions="StartAndExpand"
                        TextColor="#e2f1fb"
                        Text="{i18n:Translate rememberme}"
                        VerticalOptions="Center"/>
                    <Switch
                        
                        IsToggled="{Binding IsRemembered, Mode=TwoWay}"
                        HorizontalOptions="End">
                    </Switch>
                </StackLayout>

                <StackLayout
                    Margin="20,0">


                    <Button
                        BackgroundColor="#0e94f6"
                        Command="{Binding LoginCommand}"
                        IsEnabled="{Binding IsEnabled, Mode=TwoWay}"
                        Text="{i18n:Translate enter}"
                        TextColor="#e2f1fb" >

                    </Button>


                    <!--<Button
                        BackgroundColor="#ec2629"
                        Command="{Binding AdmisionesCommand}"
                        IsEnabled="{Binding IsEnabled, Mode=TwoWay}"
                        Text="{i18n:Translate admissions}"
                         TextColor="#e2f1fb">

                    </Button>-->


                </StackLayout>
                <ActivityIndicator
                    Color="#9ebad2"
                    IsRunning="{Binding IsRunning, Mode=TwoWay}"
                    VerticalOptions="CenterAndExpand">

                </ActivityIndicator>

                <StackLayout
                VerticalOptions="EndAndExpand">

                    <!--<Label
                    Text="visitanos: www.monicaherrera.edu.sv"
                    TextColor="AntiqueWhite"
                    HorizontalOptions="Center">
                    </Label>-->

                </StackLayout>
            </StackLayout>
        </ScrollView>

    </ContentPage.Content>
</ContentPage>